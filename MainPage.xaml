<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MobileApplicationDev.MainPage"
             BackgroundColor="#F0F0F0">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="10"
                             HorizontalOptions="Center"
                             VerticalOptions="Fill">

            <!-- Top Logo -->
            <Image Source="logo_placeholder.png"
                   HeightRequest="100"
                   HorizontalOptions="Center" />

            <!-- Title Row -->
            <Grid ColumnDefinitions="*,*,*"
                  HorizontalOptions="FillAndExpand"
                  Padding="0,10">
                <Label Grid.Column="1"
                       Text="My Terms"
                       FontSize="24"
                       FontAttributes="Bold"
                       HorizontalOptions="Center"
                       HorizontalTextAlignment="Center" />

                <Button Grid.Column="2"
                        Text="+"
                        FontSize="18"
                        CornerRadius="20"
                        WidthRequest="40"
                        HeightRequest="40"
                        BackgroundColor="#5B2EFF"
                        TextColor="White"
                        Clicked="OnAddButtonClicked"
                        HorizontalOptions="End"
                        VerticalOptions="Center" />
            </Grid>

            <!-- Term Card -->
            <Frame CornerRadius="10"
                   Padding="15"
                   Margin="10"
                   BackgroundColor="White"
                   HasShadow="True"
                   HorizontalOptions="Center"
                   WidthRequest="350">

                <VerticalStackLayout Spacing="10">

                    <!-- Update Term Link -->
                    <Label Text="Update"
                           FontSize="12"
                           TextColor="#5B2EFF"
                           TextDecorations="Underline"
                           HorizontalOptions="End"
                           VerticalOptions="Start">
                        <Label.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnUpdateTermTapped" />
                        </Label.GestureRecognizers>
                    </Label>

                    <!-- Term Info -->
                    <Label Text="Term Title"
                           FontAttributes="Bold"
                           FontSize="20"
                           HorizontalOptions="Center" />

                    <HorizontalStackLayout HorizontalOptions="Center"
                                           Spacing="10">
                        <Label Text="Start:" FontAttributes="Bold" />
                        <Label Text="Term Start Date" />
                        <Label Text="End:" FontAttributes="Bold" />
                        <Label Text="Term End Date" />
                    </HorizontalStackLayout>

                    <Label Text="My Courses"
                           FontAttributes="Bold"
                           FontSize="16"
                           HorizontalOptions="Center"
                           Margin="0,10,0,5" />

                    <!-- Course List -->
                    <VerticalStackLayout Spacing="8"
                                         HorizontalOptions="Center">

                        <!-- Course 1 -->
                        <Frame CornerRadius="10"
                               BackgroundColor="#5B2EFF"
                               Padding="10"
                               WidthRequest="250"
                               HasShadow="False">
                            <VerticalStackLayout Spacing="5">
                                <Label Text="Course Title"
                                       FontSize="14"
                                       TextColor="White"
                                       HorizontalOptions="Center" />
                                <Label Text="Start Date - Finish Date"
                                       FontSize="12"
                                       TextColor="White"
                                       HorizontalOptions="Center" />
                                <Label Text="Update"
                                       FontSize="12"
                                       TextColor="White"
                                       TextDecorations="Underline"
                                       HorizontalOptions="End">
                                    <Label.GestureRecognizers>
                                        <TapGestureRecognizer Tapped="OnUpdateCourseClicked" />
                                    </Label.GestureRecognizers>
                                </Label>
                            </VerticalStackLayout>
                        </Frame>

                        <!-- Course 2 -->
                        <Frame CornerRadius="10"
                               BackgroundColor="#5B2EFF"
                               Padding="10"
                               WidthRequest="250"
                               HasShadow="False">
                            <VerticalStackLayout Spacing="5">
                                <Label Text="Course Title"
                                       FontSize="14"
                                       TextColor="White"
                                       HorizontalOptions="Center" />
                                <Label Text="Start Date - Finish Date"
                                       FontSize="12"
                                       TextColor="White"
                                       HorizontalOptions="Center" />
                                <Label Text="Update"
                                       FontSize="12"
                                       TextColor="White"
                                       TextDecorations="Underline"
                                       HorizontalOptions="End">
                                    <Label.GestureRecognizers>
                                        <TapGestureRecognizer Tapped="OnUpdateCourseClicked" />
                                    </Label.GestureRecognizers>
                                </Label>
                            </VerticalStackLayout>
                        </Frame>

                        <!-- Course 3 -->
                        <Frame CornerRadius="10"
                               BackgroundColor="#5B2EFF"
                               Padding="10"
                               WidthRequest="250"
                               HasShadow="False">
                            <VerticalStackLayout Spacing="5">
                                <Label Text="Course Title"
                                       FontSize="14"
                                       TextColor="White"
                                       HorizontalOptions="Center" />
                                <Label Text="Start Date - Finish Date"
                                       FontSize="12"
                                       TextColor="White"
                                       HorizontalOptions="Center" />
                                <Label Text="Update"
                                       FontSize="12"
                                       TextColor="White"
                                       TextDecorations="Underline"
                                       HorizontalOptions="End">
                                    <Label.GestureRecognizers>
                                        <TapGestureRecognizer Tapped="OnUpdateCourseClicked" />
                                    </Label.GestureRecognizers>
                                </Label>
                            </VerticalStackLayout>
                        </Frame>

                    </VerticalStackLayout>
                </VerticalStackLayout>
            </Frame>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>


